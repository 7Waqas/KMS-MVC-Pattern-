@model IEnumerable<kms.Models.KeyMaster>
@{
    ViewData["Title"] = "Keys";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-key-fill text-primary"></i>
            Keys Management
        </h1>
        <p class="text-muted">Manage physical keys and their locations</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Key
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-hash"></i> Enroll Number</th>
                        <th><i class="bi bi-key"></i> Key Name</th>
                        <th><i class="bi bi-geo-alt"></i> Location</th>
                        <th><i class="bi bi-toggles"></i> Status</th>
                        <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var key in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-primary">@key.EnrollNumber</span>
                                </td>
                                <td>
                                    <i class="bi bi-key-fill text-primary me-2"></i>
                                    <strong>@key.KeyName</strong>
                                </td>
                                <td>
                                    <i class="bi bi-geo-alt text-muted me-1"></i>
                                    @key.KeyLocation
                                </td>
                                <td>
                                    @if (key.IsActive == true)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-controller="Authorizations"
                                       asp-action="Manage"
                                       asp-route-keyEnroll="@key.EnrollNumber"
                                       class="btn btn-sm btn-info me-1"
                                       data-bs-toggle="tooltip"
                                       title="Manage Authorizations">
                                        <i class="bi bi-shield-check"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@key.KeyId"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@key.KeyId"
                                          method="post" class="d-inline"
                                          onsubmit="return confirm('Delete this key?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="bi bi-inbox display-1 text-muted"></i>
                                <p class="mt-3 text-muted">No keys found</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>