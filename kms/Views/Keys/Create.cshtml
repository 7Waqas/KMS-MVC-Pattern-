@model kms.Models.KeyMaster
@{
    ViewData["Title"] = "Create Key";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-key-fill text-primary"></i>
            Add New Key
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="EnrollNumber" class="form-label fw-bold">
                            <i class="bi bi-hash"></i> Enroll Number
                        </label>
                        <input asp-for="EnrollNumber" class="form-control"
                               placeholder="e.g. 1003" />
                        <span asp-validation-for="EnrollNumber" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Must be between 1001-2000 (key range)
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="KeyName" class="form-label fw-bold">
                            <i class="bi bi-key"></i> Key Name
                        </label>
                        <input asp-for="KeyName" class="form-control"
                               placeholder="e.g. key_Admin" />
                        <span asp-validation-for="KeyName" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="KeyLocation" class="form-label fw-bold">
                            <i class="bi bi-geo-alt"></i> Key Location
                        </label>
                        <input asp-for="KeyLocation" class="form-control"
                               placeholder="e.g. Admin Office" />
                        <span asp-validation-for="KeyLocation" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Create Key
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 bg-warning bg-opacity-10">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-info-circle text-warning"></i> Key Naming Convention
                </h5>
                <ul class="mb-0">
                    <li>Use prefix "key_" for all keys</li>
                    <li>Enroll Number: 1001-2000</li>
                    <li>Example: key_IT, key_Admin, key_R&I</li>
                    <li>Must match device enrollment</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}