@model kms.Models.ViewModels.ReportViewModel
@{
    ViewData["Title"] = "Full Daily Activity Log";
    var fullLog = ViewBag.FullLog as List<Dictionary<string, object>>;
    var selectedDate = (DateOnly)ViewBag.SelectedDate;
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-journal-text text-primary"></i>
            Full Daily Activity Log
        </h1>
        <p class="text-muted">Complete overview of all key activities</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<!-- Date Filter -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="FullDailyLog" method="get">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar3"></i> Select Date
                    </label>
                    <input type="date"
                           name="date"
                           class="form-control"
                           value="@selectedDate.ToString("yyyy-MM-dd")"
                           onchange="this.form.submit()" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="mb-0">
                    <i class="bi bi-activity text-primary"></i>
                    Keys: <span class="badge bg-primary">@Model.TotalRecords</span>
                </h5>
                <p class="mb-0 small text-muted">
                    Date: @selectedDate.ToString("dd MMM yyyy")
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Report Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-table"></i> Detailed Activity Log
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-key"></i> Key Name</th>
                        <th><i class="bi bi-people-fill"></i> Authorized Employees</th>
                        <th><i class="bi bi-geo-alt"></i> Location</th>
                        <th><i class="bi bi-sunrise"></i> Morning</th>
                        <th><i class="bi bi-clock"></i> TimeIN</th>
                        <th><i class="bi bi-sunset"></i> Evening</th>
                        <th><i class="bi bi-clock"></i> TimeOUT</th>
                        <th><i class="bi bi-shield-check"></i> Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (fullLog != null && fullLog.Count > 0)
                    {
                        @foreach (var item in fullLog)
                        {
                            var keyName = item["KeyName"].ToString();
                            var authorizePerson = item["AuthorizedPersons"].ToString();
                            var keyLocation = item["KeyLocation"].ToString();
                            var morningStatus = item["MorningStatus"].ToString();
                            var morningTime = item["MorningTime"].ToString();
                            var eveningStatus = item["EveningStatus"].ToString();
                            var eveningTime = item["EveningTime"].ToString();
                            var overallStatus = item["OverallStatus"].ToString();

                            var rowClass = overallStatus == "UNAUTHORIZED" ? "table-danger" :
                            overallStatus == "NO ACTIVITY" ? "table-secondary" :
                            "table-success";

                            <tr class="@rowClass align-middle">
                                <td>
                                    <i class="bi bi-key-fill me-1"></i>
                                    <strong>@keyName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-success">
                                        <i class="bi bi-person-check-fill"></i>
                                        @authorizePerson
                                    </span>
                                </td>
                                <td>@keyLocation</td>
                                <td>@morningStatus</td>
                                <td>@morningTime</td>
                                <td>@eveningStatus</td>
                                <td>@eveningTime</td>
                                <td>
                                    @if (overallStatus == "UNAUTHORIZED")
                                    {
                                        <span class="badge bg-danger">⚠ UNAUTHORIZED</span>
                                    }
                                    else if (overallStatus == "OK")
                                    {
                                        <span class="badge bg-success">✓ OK</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">NO ACTIVITY</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="bi bi-inbox display-1 text-muted"></i>
                                <p class="mt-3 text-muted">No keys found in system</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>