@model kms.Models.ViewModels.ReportViewModel
@{
    ViewData["Title"] = "Evening Keys NOT Returned";
    var notReturnedKeys = ViewBag.NotReturnedKeys as List<kms.Models.KeyMaster>;
    var selectedDate = (DateOnly)ViewBag.SelectedDate;
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-sunset text-info"></i>
            Evening Keys NOT Returned
        </h1>
        <p class="text-muted">Keys that were not scanned back in during the evening</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<!-- Date Filter -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="EveningKeysNotReturned" method="get">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar3"></i> Select Date
                    </label>
                    <input type="date"
                           name="date"
                           class="form-control"
                           value="@selectedDate.ToString("yyyy-MM-dd")"
                           onchange="this.form.submit()" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border-0 shadow-sm bg-danger bg-opacity-10">
            <div class="card-body">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle text-danger"></i>
                    Total Keys NOT Returned:
                    <span class="badge bg-danger">@Model.TotalRecords</span>
                </h5>
            </div>
        </div>
    </div>
</div>

<!-- Report Table -->
<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-key"></i> Key Name</th>
                        <th><i class="bi bi-geo-alt"></i> Location</th>
                        <th><i class="bi bi-exclamation-triangle"></i> Status</th>
                        <th><i class="bi bi-people"></i> Authorized Persons</th>
                    </tr>
                </thead>
                <tbody>
                    @if (notReturnedKeys != null && notReturnedKeys.Any())
                    {
                        @foreach (var key in notReturnedKeys)
                        {
                            var authorizedPersons = ViewContext.HttpContext
                            .RequestServices
                            .GetService<ApplicationDbContext>()
                            .KeyAuthorizations
                            .Where(a => a.KeyEnroll == key.EnrollNumber)
                            .Join(ViewContext.HttpContext.RequestServices
                            .GetService<ApplicationDbContext>().EmployeeMasters,
                            ka => ka.EmpEnroll,
                            em => em.EnrollNumber,
                            (ka, em) => em.FullName)
                            .ToList();

                            <tr class="table-danger">
                                <td>
                                    <i class="bi bi-key-fill text-danger me-2"></i>
                                    <strong>@key.KeyName</strong>
                                </td>
                                <td>@key.KeyLocation</td>
                                <td>
                                    <span class="badge bg-danger">
                                        <i class="bi bi-exclamation-circle"></i> NOT RETURNED
                                    </span>
                                </td>
                                <td>
                                    <span class="text-muted">
                                        <i class="bi bi-person-check"></i>
                                        @(authorizedPersons.Any() ? string.Join(", ", authorizedPersons) : "--")
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <i class="bi bi-check-circle display-1 text-success"></i>
                                <p class="mt-3 text-success fw-bold">
                                    ✅ All keys have been returned this evening!
                                </p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>