@model kms.Models.ViewModels.ReportViewModel
@{
    ViewData["Title"] = "Unauthorized Access Alert";
    var unauthorizedData = ViewBag.UnauthorizedData as List<Dictionary<string, object>>;
    var selectedDate = (DateOnly)ViewBag.SelectedDate;
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 fw-bold text-danger">
            <i class="bi bi-shield-exclamation"></i>
            Unauthorized Access Alert
        </h1>
        <p class="text-muted">Security violations - keys accessed by unauthorized personnel</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<!-- Date Filter -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="UnauthorizedAccess" method="get">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar3"></i> Select Date
                    </label>
                    <input type="date"
                           name="date"
                           class="form-control"
                           value="@selectedDate.ToString("yyyy-MM-dd")"
                           onchange="this.form.submit()" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="alert alert-danger border-0 shadow-sm mb-0" role="alert">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-octagon"></i>
                Security Violations Detected:
                <span class="badge bg-danger">@Model.TotalRecords</span>
            </h5>
            <p class="mb-0 small">
                Date: <strong>@selectedDate.ToString("dd MMM yyyy")</strong>
            </p>
        </div>
    </div>
</div>

<!-- Report Table -->
<div class="card border-danger border-2 shadow-sm">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">
            <i class="bi bi-list-check"></i> Unauthorized Access Log
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-person-x"></i> Unauthorized Employee</th>
                        <th><i class="bi bi-key"></i> Key Name</th>
                        <th><i class="bi bi-people-fill"></i> Authorized Employees</th>
                        <th><i class="bi bi-clock"></i> Scan Time</th>
                        <th><i class="bi bi-calendar"></i> Date</th>
                        <th><i class="bi bi-shield-x"></i> Alert Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (unauthorizedData != null && unauthorizedData.Count > 0)
                    {
                        @foreach (var item in unauthorizedData)
                        {
                            var employee = item["Employee"].ToString();
                            var keyName = item["KeyName"].ToString();
                            var scanTime = item["ScanTime"].ToString();
                            var reportDate = (DateOnly)item["ReportDate"];
                            var alertStatus = item["AlertStatus"].ToString();
                            var authorizedPersons = item["AuthorizedPersons"].ToString();

                            <tr class="table-danger align-middle">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-danger text-white me-2">
                                            @(employee.Length > 0 ? employee[0].ToString() : "?")
                                        </div>
                                        <strong>@employee</strong>
                                    </div>
                                </td>
                                <td>
                                    <i class="bi bi-key-fill text-danger me-1"></i>
                                    <strong>@keyName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-success">
                                        <i class="bi bi-person-check-fill"></i>
                                        @authorizedPersons
                                    </span>
                                </td>
                                <td>
                                    <i class="bi bi-clock text-muted me-1"></i>
                                    @scanTime
                                </td>
                                <td>
                                    <i class="bi bi-calendar3 text-muted me-1"></i>
                                    @reportDate.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <span class="badge bg-danger px-3 py-2">
                                        <i class="bi bi-x-octagon"></i>
                                        @alertStatus
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="bi bi-shield-check display-1 text-success"></i>
                                <p class="mt-3 text-success fw-bold">
                                    ✅ No unauthorized access detected on this date!
                                </p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>