@model kms.Models.ViewModels.ReportViewModel
@{
    ViewData["Title"] = "Unauthorized Access Alert";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 fw-bold text-danger">
            <i class="bi bi-shield-exclamation"></i>
            Unauthorized Access Alert
        </h1>
        <p class="text-muted">
            Security violations - keys accessed by unauthorized personnel
        </p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-controller="Home" asp-action="Index"
           class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<!-- Date Filter -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <label class="form-label fw-bold">
                    <i class="bi bi-calendar3"></i> Select Date
                </label>
                <input type="date"
                       class="form-control"
                       id="reportDate"
                       value="@Model.SelectedDate.ToString("yyyy-MM-dd")"
                       onchange="loadReport()" />
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="alert alert-danger border-0 shadow-sm mb-0" role="alert">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-octagon"></i>
                Security Violations Detected:
                <span class="badge bg-danger" id="totalCount">Loading...</span>
            </h5>
            <p class="mb-0 small">
                These incidents require immediate review and action.
            </p>
        </div>
    </div>
</div>

<!-- Report Table -->
<div class="card border-danger border-2 shadow-sm">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">
            <i class="bi bi-list-check"></i> Unauthorized Access Log
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="reportTable">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-person-x"></i> Employee</th>
                        <th><i class="bi bi-key"></i> Key Name</th>
                        <th><i class="bi bi-clock"></i> Scan Time</th>
                        <th><i class="bi bi-calendar"></i> Date</th>
                        <th><i class="bi bi-shield-x"></i> Alert Status</th>
                    </tr>
                </thead>
                <tbody id="reportBody">
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <div class="spinner-border text-danger"></div>
                            <p class="mt-2 text-muted">Loading security logs...</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadReport() {
            const date = $('#reportDate').val();
            const tbody = $('#reportBody');

            tbody.html(`
                <tr>
                    <td colspan="5" class="text-center py-5">
                        <div class="spinner-border text-danger"></div>
                        <p class="mt-2 text-muted">Loading security logs...</p>
                    </td>
                </tr>
            `);

            $.get(`/Reports/GetUnauthorizedAccess?date=${date}`, function(data) {
                tbody.empty();
                $('#totalCount').text(data.length);

                if (data.length === 0) {
                    tbody.html(`
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="bi bi-shield-check display-1 text-success"></i>
                                <p class="mt-3 text-success fw-bold">
                                    ✅ No unauthorized access detected on this date!
                                </p>
                                <p class="text-muted">All key accesses were properly authorized.</p>
                            </td>
                        </tr>
                    `);
                    return;
                }

                data.forEach((item, index) => {
                    tbody.append(`
                        <tr class="table-danger align-middle">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle bg-danger text-white me-2">
                                        ${item.employee ? item.employee.charAt(0) : '?'}
                                    </div>
                                    <strong>${item.employee || 'Unknown'}</strong>
                                </div>
                            </td>
                            <td>
                                <i class="bi bi-key-fill text-danger me-1"></i>
                                <strong>${item.keyName}</strong>
                            </td>
                            <td>
                                <i class="bi bi-clock text-muted me-1"></i>
                                ${item.scanTime}
                            </td>
                            <td>
                                <i class="bi bi-calendar3 text-muted me-1"></i>
                                ${item.date}
                            </td>
                            <td>
                                <span class="badge bg-danger px-3 py-2">
                                    <i class="bi bi-x-octagon"></i>
                                    ${item.alertStatus}
                                </span>
                            </td>
                        </tr>
                    `);
                });
            });
        }

        $(document).ready(function() {
            loadReport();
        });
    </script>
}