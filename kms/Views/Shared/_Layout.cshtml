<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Key Management System</title>

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Chart.js for Dashboard -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(90deg, #1b263b, #0d1b2a);">


        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-key-fill me-2"></i>
                Key Management System
            </a>
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">
                            <i class="bi bi-file-text"></i> Reports
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Reports"
                                   asp-action="MorningKeysNotTaken">
                                    <i class="bi bi-sunrise text-warning"></i>
                                    Morning Keys NOT Taken
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Reports"
                                   asp-action="EveningKeysNotReturned">
                                    <i class="bi bi-sunset text-info"></i>
                                    Evening Keys NOT Returned
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Reports"
                                   asp-action="UnauthorizedAccess">
                                    <i class="bi bi-exclamation-triangle text-danger"></i>
                                    Unauthorized Access
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Reports"
                                   asp-action="FullDailyLog">
                                    <i class="bi bi-journal-text text-primary"></i>
                                    Full Daily Log
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">
                            <i class="bi bi-gear"></i> Management
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Employees"
                                   asp-action="Index">
                                    <i class="bi bi-people"></i> Employees
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Keys"
                                   asp-action="Index">
                                    <i class="bi bi-key"></i> Keys
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Authorizations"
                                   asp-action="Index">
                                    <i class="bi bi-shield-check"></i> Authorizations
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/scalar/v1" target="_blank">
                            <i class="bi bi-code-slash"></i> API Docs
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-5">
        <div class="container">
            <p class="text-muted mb-0">
                &copy; 2026 - Key Management System (MoD)
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
    </script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>