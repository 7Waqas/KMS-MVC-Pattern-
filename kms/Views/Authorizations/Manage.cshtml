@model kms.Models.ViewModels.KeyAuthViewModel
@{
    ViewData["Title"] = "Manage Authorizations";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-shield-check text-info"></i>
            Manage Authorizations for: <span class="text-primary">@Model.KeyName</span>
        </h1>
        <p class="text-muted">Select employees who are authorized to use this key</p>
    </div>
</div>

<form asp-action="UpdateAuthorizations" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="keyEnroll"
           value="@Model.AvailableEmployees.FirstOrDefault(e => e.EnrollNumber > 1000 ?
                             Model.CurrentAuthorizedEmployees.Any(c => c.EnrollNumber == e.EnrollNumber) :
                             false)?.EnrollNumber ??
                  @ViewContext.HttpContext.Request.Query["keyEnroll"]" />

    <div class="row">
        <!-- Available Employees -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light border-0">
                    <h5 class="mb-0">
                        <i class="bi bi-people text-secondary"></i>
                        Available Employees
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var employee in Model.AvailableEmployees)
                        {
                            var isAuthorized = Model.AuthorizedEmployeeIds.Contains(employee.EnrollNumber);

                            <div class="list-group-item">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="employeeEnrollNumbers"
                                           value="@employee.EnrollNumber"
                                           id="emp_@employee.EnrollNumber"
                                           @(isAuthorized ? "checked" : "") />
                                    <label class="form-check-label w-100"
                                           for="emp_@employee.EnrollNumber">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-success text-white me-2"
                                                         style="width: 30px; height: 30px; font-size: 0.9rem;">
                                                        @employee.FullName.Substring(0, 1)
                                                    </div>
                                                    <strong>@employee.FullName</strong>
                                                </div>
                                                <small class="text-muted ms-5 ps-2">
                                                    @employee.Department
                                                </small>
                                            </div>
                                            @if (isAuthorized)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check"></i> Authorized
                                                </span>
                                            }
                                        </div>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Currently Authorized -->
        <div class="col-md-6 mb-4">
            <div class="card border-info border-2 shadow-sm h-100">
                <div class="card-header bg-info bg-opacity-10 border-0">
                    <h5 class="mb-0 text-info">
                        <i class="bi bi-shield-check"></i>
                        Currently Authorized (@Model.CurrentAuthorizedEmployees.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.CurrentAuthorizedEmployees.Any())
                    {
                        <div class="list-group">
                            @foreach (var employee in Model.CurrentAuthorizedEmployees)
                            {
                                <div class="list-group-item border-0 mb-2 bg-light">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-info text-white me-3">
                                            @employee.FullName.Substring(0, 1)
                                        </div>
                                        <div class="flex-grow-1">
                                            <strong>@employee.FullName</strong>
                                            <br />
                                            <small class="text-muted">
                                                <i class="bi bi-building"></i> @employee.Department
                                            </small>
                                        </div>
                                        <i class="bi bi-check-circle-fill text-success fs-4"></i>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
                            <p class="mt-3 text-muted">
                                No employees authorized yet.<br />
                                Select employees from the left panel.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle text-primary"></i>
                                Review and Save Changes
                            </h5>
                            <small class="text-muted">
                                Changes will be applied immediately
                            </small>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Save Authorizations
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Count selected checkboxes
            function updateCount() {
                const count = $('input[name="employeeEnrollNumbers"]:checked').length;
                $('.card-header h5').first().html(
                    '<i class="bi bi-people text-secondary"></i> ' +
                    'Available Employees (' + count + ' selected)'
                );
            }

            $('input[name="employeeEnrollNumbers"]').on('change', function() {
                updateCount();
            });

            updateCount();
        });
    </script>
}