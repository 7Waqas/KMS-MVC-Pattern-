@model kms.Models.EmployeeMaster
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-pencil text-warning"></i>
            Edit Employee
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="EmpId" />

                    <div class="mb-3">
                        <label asp-for="EnrollNumber" class="form-label fw-bold">
                            <i class="bi bi-hash"></i> Enroll Number
                        </label>
                        <input asp-for="EnrollNumber" class="form-control" readonly
                               style="background-color: #e9ecef;" />
                        <small class="form-text text-muted">
                            Enroll Number cannot be changed
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold">
                            <i class="bi bi-person"></i> Full Name
                        </label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Department" class="form-label fw-bold">
                            <i class="bi bi-building"></i> Department
                        </label>
                        <input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input"
                                   type="checkbox" role="switch" />
                            <label asp-for="IsActive" class="form-check-label fw-bold">
                                Active Status
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Update Employee
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}