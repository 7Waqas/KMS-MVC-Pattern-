@model kms.Models.EmployeeMaster
@{
    ViewData["Title"] = "Create Employee";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-person-plus text-success"></i>
            Create New Employee
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="EnrollNumber" class="form-label fw-bold">
                            <i class="bi bi-hash"></i> Enroll Number
                        </label>
                        <input asp-for="EnrollNumber" class="form-control"
                               placeholder="e.g. 4" />
                        <span asp-validation-for="EnrollNumber" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Must be between 1-1000 (employee range)
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold">
                            <i class="bi bi-person"></i> Full Name
                        </label>
                        <input asp-for="FullName" class="form-control"
                               placeholder="e.g. John Doe" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Department" class="form-label fw-bold">
                            <i class="bi bi-building"></i> Department
                        </label>
                        <input asp-for="Department" class="form-control"
                               placeholder="e.g. IT" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Create Employee
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 bg-info bg-opacity-10">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-info-circle text-info"></i> Important Notes
                </h5>
                <ul class="mb-0">
                    <li>Enroll Number must match the device enrollment</li>
                    <li>Use range 1-1000 for employees</li>
                    <li>Keys use range 1001-2000</li>
                    <li>Employee must be enrolled on biometric device</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}