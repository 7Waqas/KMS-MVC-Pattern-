@model kms.Models.EmployeeMaster
@{
    ViewData["Title"] = "Create Employee";
    var departments = ViewBag.Departments as List<string> ?? new List<string>();
    var deptCounts = ViewBag.DeptCounts as Dictionary<string, int> ?? new Dictionary<string, int>();
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 fw-bold">
            <i class="bi bi-person-plus text-success"></i>
            Create New Employee
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="EnrollNumber" class="form-label fw-bold">
                            <i class="bi bi-hash"></i> Enroll Number
                        </label>
                        <input asp-for="EnrollNumber" class="form-control"
                               placeholder="e.g. 4" />
                        <span asp-validation-for="EnrollNumber" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Must be between 1-1000 (employee range)
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold">
                            <i class="bi bi-person"></i> Full Name
                        </label>
                        <input asp-for="FullName" class="form-control"
                               placeholder="e.g. John Doe" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-building"></i> Department
                        </label>

                        @if (departments.Any())
                        {
                            <!-- Toggle buttons -->
                            <div class="mb-2">
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="button"
                                            class="btn btn-outline-primary active"
                                            id="btnExisting"
                                            onclick="showExisting()">
                                        <i class="bi bi-list-ul"></i> Select Existing
                                    </button>
                                    <button type="button"
                                            class="btn btn-outline-success"
                                            id="btnNew"
                                            onclick="showNew()">
                                        <i class="bi bi-plus-circle"></i> Add New
                                    </button>
                                </div>
                            </div>

                            <!-- Existing dropdown -->
                            <div id="existingDept">
                                <select class="form-select"
                                        id="deptSelect"
                                        onchange="syncDept(this.value)">
                                    <option value="">-- Select Department --</option>
                                    @foreach (var dept in departments)
                                    {
                                        <option value="@dept">@dept</option>
                                    }
                                </select>
                            </div>

                            <!-- New department input -->
                            <div id="newDept" style="display:none;">
                                <input type="text"
                                       class="form-control"
                                       id="deptNewInput"
                                       placeholder="Type new department name..."
                                       oninput="syncDept(this.value)" />
                            </div>

                            <!-- Hidden input that submits the value -->
                            <input type="hidden" asp-for="Department" id="deptHidden" />
                        }
                        else
                        {
                            <input asp-for="Department"
                                   class="form-control"
                                   placeholder="e.g. IT" />
                        }

                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Create Employee
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 bg-info bg-opacity-10">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-info-circle text-info"></i> Important Notes
                </h5>
                <ul class="mb-0">
                    <li>Enroll Number must match the device enrollment</li>
                    <li>Use range 1-1000 for employees</li>
                    <li>Keys use range 1001-2000</li>
                    <li>Employee must be enrolled on biometric device</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function syncDept(value) {
            document.getElementById('deptHidden').value = value;
        }
        function showExisting() {
            document.getElementById('existingDept').style.display = 'block';
            document.getElementById('newDept').style.display = 'none';
            document.getElementById('btnExisting').classList.add('active');
            document.getElementById('btnNew').classList.remove('active');
            var sel = document.getElementById('deptSelect');
            syncDept(sel ? sel.value : '');
        }
        function showNew() {
            document.getElementById('existingDept').style.display = 'none';
            document.getElementById('newDept').style.display = 'block';
            document.getElementById('btnNew').classList.add('active');
            document.getElementById('btnExisting').classList.remove('active');
            document.getElementById('deptNewInput').value = '';
            syncDept('');
        }
        function selectDept(name) {
            showExisting();
            var sel = document.getElementById('deptSelect');
            if (sel) { sel.value = name; syncDept(name); }
        }
    </script>
}